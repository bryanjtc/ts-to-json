{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "suppressExcessPropertyErrors": false,
    "suppressImplicitAnyIndexErrors": false,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noLib": false,
    "sourceMap": true,
    "pretty": true,
    "watch": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
  },
  "files": [
    "ts-to-json.ts",
    "index.ts"
  ],
  "include": [
    "./src/**/*.ts",
    "./factory/**/*.ts",
    "./test/**.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
